@model AGetByIdProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<div class="col-md-12">

    <div class="card">
        <div class="card-header">
            <div class="card-title">Pano İlanı Ekle</div>
        </div>
        <div class="card-body">

            <form class="form-control" method="post">
                <input type="hidden" asp-for="ProductID"/>
                <div class="form-group">
                    <label>İlan Başlığı</label>
                    <input type="text" class="form-control input-pill" asp-for="Title" required />
                </div>
                <div class="form-group">
                    <label>İlan Görseli</label>
                    <input type="text" class="form-control input-pill" asp-for="CoverImage" required />
                </div>
                <div class="form-group">
                    <label>Fiyat</label>
                    <input class="form-control input-pill" asp-for="Price" required />
                </div>
                <div class="form-group">
                    <label>Danışman</label>
                    @Html.DropDownListFor(x => x.AgentID, (SelectList)ViewBag.agentList, "Danışman Seçiniz", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>İlan Türü</label>
                    @Html.DropDownListFor(x => x.PropID, (SelectList)ViewBag.propList, "İlan Türü Seçiniz", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Şehir Seçiniz</label>
                    @Html.DropDownListFor(x => x.LocationID, (SelectList)ViewBag.cityList, "Şehir Seçiniz", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea id="summernote" class="form-control" asp-for="Description2"></textarea>
                </div>
                <div class="form-group">
                    <label>Tanıtım Video Url</label>
                    <input type="text" class="form-control input-pill" asp-for="VideoUrl" required />
                </div>

                <div class="card-action">
                    <button type="submit" class="btn btn-success">Güncelle</button>
                    <a href="/Admin/Slider/SliderList" class="btn btn-secondary">Vazgeç</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $('#summernote').summernote({
        placeholder: 'Hello stand alone ui',
        tabsize: 2,
        height: 120,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>

